/* 总框架 */

.mycontainer {
  width: 84%;
  margin: 30px auto;
}

/* 自定义标题栏 */
.container1 {
  position: fixed;
  width: 100%;
  z-index: 101;
  top:0rpx;
  height:80rpx;
}

.back {
  width: 80rpx;
  height: 80rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.title {
  font-size: 28rpx;
  bottom: 0;
  left: 8%;
}

.title_sub {
  margin-right: 5px;
  padding: 0 20px;
  line-height: 30px;
  border-radius: 4px;
  display: inline-block;
}

.title_sub.on {
  background: #63d291;
  color: #fff;
}

.block, .block-input {
  width: 100%;
}

.block {
  border-bottom: 1px solid #e6e6e6;
}

.phoneBtn{
  width:100rpx;
  height:100rpx;
  background-color:white;
  background-repeat: no-repeat;
  background-position:center;
  background-size:50rpx 50rpx;
  background-image:url('data:image/png;base64,');
}

.block-input {
  height: 70rpx;
  padding-bottom: 10rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
}

.code {
  display: flex;
  justify-content: space-between;
}

.code-input {
  width: 68%;
}

.identify-code {
  color: #fff;
  background:  #63d291;
  border: #fff;
  border-radius: 10rpx;
  width: 32%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 25rpx;
  margin-top: 20rpx;
}

/* 忘记密码和账号注册 */

.smallblock {
  clear: both;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-between;
}

.smallblock-forget, .smallblock-sign {
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.smallblock-forget {
  color: rgb(77, 77, 77);
}

.smallblock-sign {
  color: #ccc
}

/* 确定按钮 */
.submit {
  width: 100%;
  height: 40px;
  line-height: 40px;
 
  margin: 30rpx auto;
  color: white;
  font-size: 30rpx;
  text-align: center;
  background:  #63d291;
  border-radius: 10rpx;
}

/* 快速登录的线 */

.line {
  display: flex;
  justify-content: center;
}

.line-border {
  width: 180rpx;
  border-top: 1rpx solid rgba(204, 204, 204, 0.3);
  margin-top: 15rpx;
}

.line-text {
  height: 40rpx;
  color: rgb(187, 187, 187);
  font-size: 24rpx;
}

/* 快捷登录的图标 */

.fastlogin {
  display: flex;
  justify-content: center;
  height: 60rpx;
  width:280rpx;
  border:3rpx solid #16d58b;
  border-radius: 8rpx;
  line-height: 60rpx;
  color:#16d58b;
  background: rgb(255, 255, 255);
  margin-top:50rpx;
}

.fastlogin-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top:10rpx;
}

.fastlogin-text{
  font-size:28rpx;
  letter-spacing: 5rpx;
  margin-left:30rpx;
  font-weight: bolder;
}

.select1 {
  opacity: 0.3;
}

.select2 {
  background: #01d358;
}

.select3 {
  background: rgba(97, 168, 112, 0.1);
}
