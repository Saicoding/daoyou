<image wx:if="{{!loaded}}" class="loading-img" src="/images/imgLoading.gif" mode="aspectFit"></image>
<view wx:if="{{loaded}}" class="content">
  <image wx:if="{{list==''}}" src="/images/hasNopage/hasNopage.png" class="hasNopage"></image>
  <view wx:for="{{list}}" wx:for-item="list" wx:key="i" class='list' data-img='{{list.pic}}' data-id='{{list.id}}' bindtap='info'>
    <view class='listimg'>
    <image src="{{list.pic}}"></image>
    </view>
    <view class='yuyin' wx:if="{{list.audio*1>0}}"><image src="../../images/course/yuyin@2x.png" class='fl' mode="widthFix"></image>语音版</view>
    <view class='yuyin' wx:if="{{list.audio*1==0}}"><image src="../../images/course/wenzi@3x.png" class='fl' mode="widthFix"></image>文字版</view>
    <view class='list_t'>{{list.title}}</view>
    <view class='biao'>
      <view>
        <image src="../../images/course/renshu@2x2.png" mode="widthFix"></image>
        {{list.hit}}
      </view>
      <view>
        <image src="../../images/course/liuyan@2x.png" mode="widthFix"></image>
        {{list.pl_num}}
      </view>
    </view>

  </view>

<!-- 最下面的加载条 -->
  <view class="loading-block">
    <image wx:if="{{showLoadingGif}}" class="loading-img" src="/images/timg.gif"></image>
    <view class="loading-text"> {{loadingText}}</view>
  </view>
</view>