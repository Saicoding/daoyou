.content {
  background: #f3f7fa;
  height: 100%;
}

.playbtn {
  position: absolute;
  top: -25px;
  right: 25px;
  width: 50px;
  height: 50px;
}

.cont_t {
  width: 88%;
  margin: 0 auto;
  margin-top: -50px;
  padding: 4%;
  background: #fff;
  line-height: 50rpx;
  border-radius: 6px;
}

.cont_b {
  padding:15rpx 4% 4% 4%;
  font-size:30rpx;
  background: #fff;
  line-height: 50rpx;
  margin-top: 10px;
}

.progress {
  background: #eee;
  border-radius: 2px;
  height: 6px;
  overflow: hidden;
}

.progress_sub {
  background: #00c746;
  border-radius: 6px;
  height: 6px;
  margin: 0;
  width: 0;
}

.infos {
  height: 200rpx;
  overflow: hidden;
  display: block;
}

.infos.on {
  height: auto;
}

.infos_btn {
  font-size: 24rpx;
  margin-top: 10px;
  text-align: right;
  color: #00c746;
}

.bottomkk {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  border-top: 1rpx solid #ddd;
  background: #f4f5f6;
}

.bottom-icon {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.bottom-input {
  background: white;
  border: 1px #eee solid;
  border-radius: 10rpx;
  margin-left: 20rpx;
  height: 70rpx;
  margin-top: 15rpx;
  padding-left: 15rpx;
  font-size: 26rpx;
  float: left;
}

.bottom-send {
  color: white;
  font-size: 25rpx;
  text-align: center;
  border-radius: 12rpx;
  height: 70rpx;
  width: 150rpx;
  margin-top: 15rpx;
  background: #07c160;
  line-height: 70rpx;
  margin-right: 15rpx;
  float: right;
}

.pingjia {
  padding-bottom: 60px;
  margin-top: 20px;
}

.pllist {
  width: 94%;
  padding: 4% 3%;
  border-bottom: 1px #eee solid;
  background: #fff;
}

.plimg {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  float: left;
}

.plcont {
  width: 85%;
  float: right;
}

.plcont .clear {
  line-height: 35px;
}

.pltext {
  line-height: 24px;
  color: #555;
}

.pltext2 {
  padding: 2%;
  background: #f4f7f9;
}

.pltext2 text {
  color: #64d56b;
}

/* 其他参考,如何自己写导游词 */

.ref {
  display: flex;
  justify-content: space-between;
  height: 50rpx;
}

.ref-left {
  display: flex;
}

.ref-right {
  display: flex;
  padding-left:20rpx;
  padding-right:20rpx;
}

.ref-left-tiao {
  width: 10rpx;
  height: 30rpx;
  margin-top: 10rpx;
  background: rgb(0, 226, 76);
  border-radius: 5rpx;
}

.ref-left-text {
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: black;
  margin-left: 10rpx;
}

.ref-right-text {
  color: rgb(155, 155, 155);
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.ref-right-circle {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgb(155, 155, 155);
  text-align: center;
  color: rgb(155, 155, 155);
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size:22rpx;
}

.select1{
  background: rgba(155, 155, 155,0.1);
  border-radius: 10rpx;
}
