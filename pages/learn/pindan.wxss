/* 四个按钮 */

.bars {
  width: 96%;
  height: 60rpx; padding:1% 2%; padding-bottom: 2%;
  align-items: center;
  white-space: nowrap;
  box-shadow: 0 8rpx 10rpx #eee; overflow: hidden;
}
.fixed {
  position: fixed;
  top: 0;
  background: #2983fe;
}
.title_ci { line-height: 40rpx; margin:4% 0; padding-left:2%; border-left: 4px #00c843 solid;}
.diqu { display: inline-block;  font-size:28rpx; color: #666; margin: 10px 0; margin-right: 20px;}
.bars-huodong{
  display: inline-block;
  width: 25%;
  height: 60rpx;
  background: #fff; font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
  
}
.info{
  background: #faf9ff; padding:3% 4%;
  font-size:25rpx;
  color:#666;
  line-height:40rpx; margin-top: 15px;
}
.info view { margin-top:14rpx;}
.bars-huodong.on {
  background: linear-gradient(to right, #1fce73, #33e98b);
  box-shadow: 2rpx 2rpx 8rpx 4rpx #cbf4dd;
  color: white;
}

.bars-btn {
  background: white;
  color: rgb(121, 121, 121);
  border: 1rpx solid rgb(236, 236, 236);
}
.block{
  clear: both;
  width:94%; padding:4% 3%;
}

.img,.right-block{
  display: float;
  float:left;
}

.right-block{
   width:57%; float:right;
}

.img{
  width:40%; max-height: 200rpx;
}
.loading-block {
  width: 100%;
  height: 70rpx;
  font-size: 23rpx;
  line-height: 70rpx;
  margin: 0rpx auto;
  text-align: center;
  color: rgb(156, 156, 156);
}

.title{
  line-height:50rpx; height: 100rpx;
  overflow: hidden;
}

.hot{
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  color:#998a8b;
  font-size:25rpx;
}

.hot-img,hot-text,.in-line{
  display: float;
  float:left;
}

.hot-img{
  width:40rpx;
  height:40rpx;
}

.hot-text{
 
  margin-left:50rpx; margin-right: 30rpx; color: #999;
}
.hong { color: #e02e24}
/* 头部 */

.up {
  
  z-index: 100;
  width: 100%;
  background:white;
  padding-bottom:30rpx;
}



.up-avatar{
  display: flex;
  justify-content: center;
  margin-top:40rpx;
}

.up-avatar-pic{
  width:90rpx;
  height:90rpx;
  border-radius: 90rpx;
  border:3rpx solid #fec638;
}

.up-avatar-text{
  width:70rpx;
  height:35rpx;
  line-height: 35rpx;
  border-radius: 35rpx;
  position: relative;
  font-size:20rpx;
  color:rgb(82, 82, 82);
  background: #ffab33;
  border:1rpx solid white;
  text-align: center;
  top:-110rpx;
  left:-10rpx;
}

.up-text{
 
  font-size:32rpx;
  color:black;
  text-align: center;
}

.btn,.btn1{
  width:85%;
  height:100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  color:white;
  font-size:32rpx;
  text-align: center;
  margin:0 auto;
  margin-top:30rpx;
  margin-bottom:20rpx;
}

.btn{
  background: linear-gradient(to right,#7fcfa6,#55ebc5);
}
.btn.huise {background: linear-gradient(to right,#ccc,#d2d3d5);}
.btn1{
  background: linear-gradient(to right,#16d6a5,#07e74a);
}

/* 下面部分 */
.down{
  bottom:0 ;
  position: fixed;
  z-index: 100;
  width: 100%;
  background:white;
  padding-bottom:50rpx;
}

.down-close{
  width:80rpx;
  height:80rpx;
  float: right;
}

.down-close-icon{
  width:40rpx;
  height:40rpx;
  margin-top:20rpx;
  margin-left:20rpx;
}

/* 下面中间部分 */
.down-mid{
  clear: both;
  width:620rpx;
  height:120rpx;
  line-height:120rpx;
  font-size:25rpx;
  color:#9a9a9a;
  text-align: center;
  border:2px dashed #ffdad0;
  border-radius: 15rpx;
  margin:0 auto;
}

.triggle{
  position: relative;
  left:355rpx;
  top:-27rpx;
  width:55rpx;
  height:55rpx;
}

.bottom-btn{
  display: flex;
  justify-content: center;
  width:610rpx;
  height:90rpx;
  line-height: 90rpx;
  font-size:28rpx;
  color:white;
  background: linear-gradient(to right,#1edb78,#17d6a6);
  margin:0 auto;
  border-radius: 10rpx;
  margin-top:-30rpx;
}

.bottom-btn-icon{
  width:40rpx;
  height:40rpx;
