.slide-image {
  width: 100%;
}

/* 四个按钮 */

.bars {
  display: flex;
  width: 750rpx;
  height: 110rpx;
  align-items: center;
  white-space: nowrap;
  box-shadow: 0 0 8rpx 10rpx #eee;
}

.fixed {
  position: fixed;
  top: 0;
  background: #2983fe;
}

.bars-huodong, .bars-btn {
  display: inline-block;
  width: 20%;
  height: 60rpx;
  font-size: 25rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 25rpx;
  margin-left: 3.5%;
}

.bars-huodong {
  background: #fff; font-size: 28rpx;
  color: #333;
}

.bars-huodong.on {
  background: linear-gradient(to right, #1fce73, #33e98b);
  box-shadow: 2rpx 2rpx 8rpx 4rpx #cbf4dd;
  color: white;
}

.bars-btn {
  background: white;
  color: rgb(121, 121, 121);
  border: 1rpx solid rgb(236, 236, 236);
}
.block{
  clear: both;
  width:94%; padding:4% 3%;
  border-bottom: 1rpx solid #eee;
}

.img,.right-block{
  display: float;
  float:left;
}

.right-block{
   width:60%; float:right;
}

.img{
  width:37%;
}

.title{
  font-size:30rpx;
  line-height:50rpx;
  overflow: hidden; white-space: nowrap;text-overflow: ellipsis;
}

.hot{
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  color:#998a8b;
  font-size:25rpx;
}

.hot-img,hot-text,.in-line{
  display: float;
  float:left;
}

.hot-img{
  width:40rpx;
  height:40rpx;
}

.hot-text{
 
  margin-left:50rpx; margin-right: 30rpx; color: #999;
}
.loading-img{
  display: block;
  width: 118rpx;
  height:150rpx;
  margin:300rpx auto;
}