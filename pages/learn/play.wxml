<!--pages/video/videoDetail/videoDetail.wxml-->

<video bindtap="tooglePlay" id="myVideo" class='myVideo' controls initial-time="{{files[px-1].lastViewLength}}" poster="{{img}}" class="video" src="{{files[px-1].files == undefined?'':files[px-1].files}}" bindended="end" bindtimeupdate="timeupdate" bindwaiting="waiting" custom-cache="false" bindplay="play" bindpause="pause" enable-progress-gesture show-center-play-btn="{{false}}" autoplay="{{autoplay}}">
  
  <!-- <view class="unBuy" wx:if="{{buy==0}}">
    <image class="video-icon" src="/images/course/ypad_btn_answers_play@2x.png" />
  </view> -->
  <view wx:if="{{!isWifi && !useFlux && buy!=0}}" class="wifi">
    <view class="wifi-text1">您正在使用移动网络</view>
    <view class="wifi-text2">继续观看会耗费通用流量</view>
    <view bindtap='continueWatch' class="wifi-button">继续观看</view>
  </view>

</video>

<image wx:if="{{!loaded}}" class="loading-img" src="/images/timg.gif" mode="aspectFit"></image>
<view hidden="{{!loaded}}" class="content">
  <!--倍速-->
  
  <view class='beisu {{playbackRate=="1.5"?"on":""}}' bindtap='beisu' data-su='1.5'>x1.5</view>
  <view class='beisu {{playbackRate=="1.25"?"on":""}}' bindtap='beisu' data-su='1.25'>x1.25</view>
  <view class='beisu {{playbackRate=="1.0"?"on":""}}' bindtap='beisu' data-su='1.0'>x1.0</view>
  <view class='beisu {{playbackRate=="0.8"?"on":""}}' bindtap='beisu' data-su='0.8'>x0.8</view>
  <text class='beisu tar' style='border:0'>速率：</text>
  <view class='clear'></view>
  <!-- 视频 -->
  <view class="up-block" wx:if="{{product != 'pingjia'}}">
    <view class='kc_money'>
      <text class='b'>{{kc_money?kc_money:"免费"}}</text>
      <text class='f12'>{{kc_money?"元":""}}</text>
      <view class='f12 hui'>已有{{renshu}}人报名</view>
    </view>
    <button open-type="contact" class='hui f14 fl zixun'>
      <image src="/images/course/icon_humanService_black@2x.png" class='fl'></image>咨询</button>

    <view wx:if="{{buy==0}}" data-product="{{myproduct}}" bindtap='goPay' class="youhui">立即购买</view>
    <view wx:if="{{buy==1}}" class="purchased">已开通</view>
  </view>
  <view style='padding:4%;'>
    <view class='f20 b'>
      {{kc_name}}
    </view>
    <view class='clear' style='height:20rpx;'></view>
    <view class='f14'>
      <text class='hui mr10'>状态</text>{{files.length}}课时
      <text class='hui mr10' style='margin-left:50rpx;'>讲师</text>{{teacher}}
      <view class='clear' style='height:20rpx;'></view>

      <text class='hui mr10'>选课</text>
      <navigator url='learn' open-type="switchTab" class='xk {{zi=="精讲"?"on":""}}'>基础精讲</navigator>
      <navigator url='learn' open-type="switchTab" class='xk {{zi=="提升"?"on":""}}'>习题提升</navigator>
      <navigator url='learn' open-type="switchTab" class='xk {{zi=="冲刺"?"on":""}}'>考前冲刺</navigator>
      <view class='clear' style='height:20rpx;'></view>
      <text class='hui mr10'>优惠</text>
      <navigator url='../index/xuexijihua/xuexijihua' class='text hong'>购买导游考试【全陪学习套餐】劲省320元</navigator>
      <view class='clear' style='height:20rpx;'></view>
    </view>
  </view>
  <view class="mybar">

    <view data-product="introduction" bindtap='changeOption' class="title1" style="color:{{product == 'introduction'?'#63d291':'black'}}">课程介绍</view>
    <view data-product="option" bindtap='changeOption' class="title1" style="color:{{product == 'option'?'#63d291':'black'}}">课程目录</view>
    <view data-product="pingjia" bindtap='changeOption' class="title1" style="color:{{product == 'pingjia'?'#63d291':'black'}}">课程评价</view>

    <view class="blockMove" animation="{{moveData}}"></view>
  </view>

  <view style="padding-bottom: 180rpx;">
    <!-- 简介信息 -->
    <view hidden="{{product != 'introduction'}}" class="info">

      <image style='width:{{infowidth}}%' src='{{info}}' mode='widthFix'></image>

    </view>

    <!-- 目录信息 -->
    <view hidden="{{product != 'option'}}" class="option">
      <view wx:for="{{files}}" wx:for-item='video' wx:key='v'>
        <view data-index="{{index}}" class="video-block" hover-class='select' bindtap='changeVideo'>

          <view class="title-block">
            <view class="title">{{video.filesname}}</view>
            <view class="view-time">{{video.time}}</view>
          </view>
        </view>
      </view>
    </view>
    <!-- 评价-->
    <view hidden="{{product != 'pingjia'}}" class="pingjia">
      <view wx:for="{{pl}}" wx:for-item='pl' wx:key='p'>
        <view class='pllist'>
          <image class='plimg' src='{{pl.userimg}}' mode='widthFix'></image>
          <view class='plcont'>
            <view class='clear'>
              <text class='f15'>{{pl.nickname}}</text>
              <text class='f12 hui fr'>{{pl.pl_time}}</text>
            </view>
            <view class='pltext f14'>{{pl.pc_content}}</view>
            <view class='pltext2 f13' wx:if="{{pl.hf!=''}}">
              <text>管理员回复：</text>{{pl.hf}}</view>
          </view>
          <view class='clear'></view>
        </view>
      </view>
      <view class="bottomkk">
        <input focus='{{focus}}' cursor-spacing="14rpx" value="{{value}}" class="bottom-input" style="width:{{text?550:700}}rpx;" bindinput='typing' bindblur="blur"></input>
        <view wx:if="{{text}}" class="bottom-send" style="width:{{text?140:0}}rpx;" bindtap="sendMessage">发送</view>
      </view>
    </view>
  </view>

  <!-- bottom -->
  <!-- android -->
  <!-- <view wx:if="{{buy==0 && platform == 'android' }}" data-product="{{files[px-1].id}}" class="bottom" bindtap='buy'>
    <view class="bottom-price">¥{{kc_money}}</view>
    <view class="bottom-buy">开通此课</view>
  </view> -->

  <!-- ios -->
  <!-- <view data-product="{{myproduct}}" wx:if="{{buy==0 && platform == 'ios'}}" class="bottom" bindtap='goPay'>
    <view class="bottom-buy" style="width:100%;">点此开通</view>
  </view> -->
</view>
<view class='scrolltop f12 hui {{mybar}}' bindtap='scrolltop'>top</view>


