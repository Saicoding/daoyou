/* pages/shuati/zuoti/zuoti.wxss */

page {
  background: #f4f7f9;
}


/* 自定义标题栏 */
.container1 {
  position: fixed;
  background: #32d584;
  width: 100%;
  z-index: 101;
  top:0rpx;
  height:80rpx;
}

.back {
  width: 80rpx;
  height: 80rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.title {
  width: 600rpx;
  font-size: 35rpx;
  height: 80rpx;
  line-height: 75rpx;
  color: white;
}

/* 整个内容部分是滑块 */

.swiper {
  width: 100%;
  height: 100%;
}

/* 多选题查看解析 */
.submit_answer {
  width: 80%;
  height: 70rpx;
  font-size: 25rpx;
  text-align: center;
  background: linear-gradient(to right, #31d98b, #00f583);
  line-height: 70rpx;
  color: white;
  margin: 0 auto;
  margin-top: 50rpx;
  border-radius:10rpx;
}

/* 最下面 */

.bottom {
  width: 100%;
  position: fixed;
  height: 81rpx;
  bottom: 0rpx;
  border-top: 1rpx solid rgba(43, 43, 43, 0.1);
  background-color: white;
  z-index: 100;
}

.loading-img {
  display: block;
  width: 118rpx;
  height: 150rpx;
  margin: 300rpx auto;
}

/* 笔记输入框 */

.biji{
  position: fixed;
  background: white;
  width:690rpx;
  padding:0rpx 30rpx 20rpx 30rpx;
  bottom:0rpx;
  z-index:1001;
}

.biji-line1{
  display: flex;
  justify-content: space-between;
}

.biji-line1-text{
  font-size:30rpx;
  width:120rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  color:#ababab;
}

.biji-textarea{
  background: #f2f2f2;
  width:100%;
  height:120rpx;
  padding:10rpx 20rpx 10rpx 20rpx;
  border-radius: 15rpx;
}

/* 笔记蒙版 */
.model{
  position: absolute;
  top:0rpx;
  left:0rpx;
  width:100%;
  height:100%;
  filter:Alpha(Opacity=60);
  background-color:#1F1F1F;
  opacity: 0.5;
  z-index: 1000;
}

.note{
  font-size:25rpx;
  width: 635rpx;
  padding:15rpx 40rpx 15rpx 40rpx;
  line-height: 40rpx;
  margin:30rpx auto;
  box-shadow:1rpx 1rpx 14rpx 3rpx rgba(20, 20, 20,0.1);
  background:white;
  border-radius: 10rpx;
}
