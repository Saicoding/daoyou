<!--pages/shuati/zuoti/zuoti.wxml-->
<view class="container1" style="padding-top:{{statusBarHeight+10}}rpx;display:flex;">
  <view class="back" hover-class='select1' hover-stay-time='500' bindtap="back" style="top:{{statusBarHeight+10}}rpx" bindtap = "back">
    <image class="back-icon" src="/images/back.png"></image>
  </view>
  <view class = "title">{{options.title}}</view>
</view>

<view class="container">
  <swiper wx:if="{{isLoaded}}" duration="200" current="{{myCurrent}}" circular="{{circular}}" skip-hidden-item-layout="true" class="swiper" style="height:{{windowHeight}}rpx;" bindchange="sliderChange">
    <block wx:for="{{sliderShitiArray}}" wx:for-item="shiti" wx:key="ti">
      <swiper-item>
        <scroll-view scroll-y style="height:{{windowHeight-85}}rpx;">
        <view style = "width:100%;height:{{statusBarHeight+110}}rpx;"></view>
          <view style="border:1rpx solid white;">
            <!--单选题-->
            <view style="margin-bottom:50rpx;" wx:if="{{shiti.TX == 1}}">
              <singleSelect shiti="{{shiti}}" checked="{{checked}}" bindanswerSelect="_answerSelect"> </singleSelect>
            </view>

            <!--多选题-->
            <view style="margin-botoom:50rpx;" wx:if="{{shiti.TX ==2}}">
              <multiSelect shiti="{{shiti}}" checked="{{checked}}" bindcheckVal="_checkVal"></multiSelect>
              <view class='submit_answer' wx:if="{{!shiti.isAnswer}}" bindtap="_answerSelect">查看解析</view>
            </view>
          </view>
          <!-- 解析 -->
          <jiexi answer="{{shiti.answer}}" isAnswer="{{shiti.isAnswer}}" jiexi="{{shiti.jiexi}}" bindtoggleErrorRecovery="_toggleErrorRecovery"></jiexi>
        </scroll-view>
      </swiper-item>
    </block>
  </swiper>
</view>

<!-- 载入动画 -->
<view wx:if="{{!isLoaded}}">
  <image class="loading-img" src="/images/timg.gif" mode="aspectFit"></image>
</view>

<!-- 答题板 -->
<markAnswer isLianxi="true" id="markAnswer" windowHeight="{{windowHeight}}" markAnswerItems="{{markAnswerItems}}" bind:tapEvent="_tapEvent" bind:restart="_restart">
</markAnswer>

<!-- 底部正确错误个数统计条 -->
<shuatiBottom id="shuatiBottom" isMark="{{myFavorite}}" class="bottom" bindtoogleMark="_toogleMark" bindtoogleMarkAnswer="_toogleMarkAnswer">
</shuatiBottom>

<!-- 纠错板 -->
<errorRecovery id="errorRecovery" windowWidth="{{windowWidth}}" windowHeight="{{windowHeight}}" bindsubmit="_submit"></errorRecovery>

<!-- 点击返回按钮后的统计面板 -->
<tongji id = "tongji" statusBarHeight = "{{statusBarHeight}}" bindtoBack = "_toBack"></tongji>