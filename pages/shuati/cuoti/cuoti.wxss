/* pages/shuati/cuoti/cuoti.wxss */
page{
  background: #f4f8fb;
}

/* 最上面部分 */
.up{
  display: flex;
  background: white;
  width:100%;
  padding-bottom: 50rpx;
}

.shadow{
  width:750rpx;
  box-shadow: 14rpx 8rpx 14rpx 14rpx rgba(34, 34, 34,0.2);
}

.up-item,.up-item-num,.up-item-bottom{
  width:240rpx;
}

.line{
  height:100rpx;
  border-left:1rpx solid rgba(56, 56, 56,0.1);
  margin-top:85rpx;
}

.up-item-num{
  text-align: center;
  font-size:60rpx;
  color:#c0c0c0;
  height:170rpx;
  line-height: 200rpx;
}

.up-item-bottom{
  display: flex;
  justify-content: center;
}

.up-item-bottom-circle{
  width:30rpx;
  height:30rpx;
  border-radius: 30rpx;
}

.up-item-bottom-text{
  height:30rpx;
  line-height: 30rpx;
  font-size:25rpx;
  margin-left:10rpx;
}

/* 题部分 */

.ti {
  width: 710rpx;
  padding: 70rpx 20rpx 20rpx 20rpx;
  background: #f4f8fb;
}

.ti-icons {
  width: 40rpx;
}

.ti-title-icon {
  width: 50rpx;
  height: 50rpx;
}

.jie-border {
  border-left: 1rpx solid #eaeaea;
  height: 90rpx;
  margin-left:25rpx;
  margin-top:-50rpx;
}

.jie-dot {
  width: 30rpx;
  height: 30rpx;
  margin-left:10rpx;
  margin-top:5rpx;
}

.ti-block {
  display: flex;
  height:90rpx;
}

.ti-block-line,.ti-block-line1{
  width: 500rpx;
}

.ti-block-line {
  height: 90rpx;
}

.ti-block-line1 {
  display: flex;
}

.ti-block-line1-title {
  width: 300rpx;
  height: 60rpx;
  font-size:25rpx;
}

.ti-block-line1-num {
  width: 200rpx;
  height: 60rpx;
  text-align: right;
}

.ti-block-line2, .ti-block-line3 {
  height: 6rpx;
  border-radius: 6rpx;
}

.ti-block-line2 {
  width: 490rpx;
  background: #e5e5e5;
}

.ti-block-line3 {
  position: relative;
  top: -6rpx;
  width: 50rpx;
  background: #0dda5b;
}

.ti-block-shu{
  height:30rpx;
  border:1rpx solid rgba(31, 31, 31,0.1);
  margin:20rpx 40rpx 30rpx 40rpx;
}

.ti-block-answer{
  width:50rpx;
  height:50rpx;
  margin-top:10rpx;
}

.ti-block-line1-num{
  font-size:22rpx;
  color:#a2a1a2;
  height:60rpx;
  line-height: 60rpx;
}

/* 最下面 */
.bottom{
  position:fixed;
  bottom:40rpx;
  width:280rpx;
  height:60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  left:235rpx;
  text-align: center;
  color:#34d573;
  border:1rpx solid #00c356;
  font-size:29rpx;
  font-weight:bold;
}