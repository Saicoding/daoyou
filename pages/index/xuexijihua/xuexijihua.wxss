/* pages/index/xuexijihua/xuexijihua.wxss */

.bg {width: 100%; height: 100%; background: rgba(0, 0, 0, 0.3); position: fixed;bottom: 0; left: 0; z-index:19}
#myVideo { position: fixed;bottom: 0; left: 0; width: 100%; z-index:20}
.w100 { width: 100%;vertical-align:bottom;}
.float {
  width: 100%;
  display: flex;
  position: fixed;
  top: 0rpx;
  height: 50rpx;
  background: #ffd8d9;
}

.float-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
}

.float-text {
  font-weight: bold;
  font-size: 25rpx;
  color: #fd2f3b;
  line-height: 50rpx;
}

.block{
 
  position: fixed;
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  font-size:28rpx;
  bottom:120rpx;
  background: #fdf6ec;
}
.block view,.block image { float: left}
.block-icon1{
  position: relative;
  width:60rpx;
  height:60rpx;
  border-radius: 60rpx;
  margin-top:20rpx;
  margin-left:30rpx;
   z-index: 2;
}

.block-icon2-container{
  position: relative;
  width:60rpx;
  height:60rpx;
  border-radius: 60rpx;
  background: white;
  margin-top:20rpx;
  left:-30rpx;
  z-index: 1;
}

.block-icon2{
  display: block;
  width:40rpx;
  height:40rpx;
  margin-left:10rpx;
  margin-top:10rpx;
}

.iosBtn{
  font-size:35rpx;
  color:white;
  text-align: center;
  height:120rpx;
  line-height: 120rpx;
  background:rgb(46, 197, 0);
  width:415rpx;
}

/* 最下面 */

.bottom {
  display: flex;
  width: 750rpx;
  position: fixed;
  bottom: 0rpx;
  height: 120rpx;
}

.bottom-item1 {
  display: flex;
  justify-content: space-around;
  width: 130rpx;
  font-size: 25rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #7c7c7e;
  background: white;
  border-top: 1rpx solid #ececec;
}

.bottom-item {
  display: flex;
  justify-content: space-around;
  width: 170rpx;
  font-size: 25rpx;
  color: #7c7c7e;
  background: white;
  border-radius: 0rpx;
  border-top: 1rpx solid #ececec;
}

.bottom-item1-icon {
  width: 41rpx;
  height: 35rpx;
  margin-top: 42.5rpx;
}

.bottom-item1-text {
  line-height: 120rpx;
}

.bottom-item2 {
  color: white;
  text-align: center;
  letter-spacing: 1rpx;
  background: #a0eaaf;
  width: 168rpx;
}

.bottom-item3 {
  color: white;
  background: #0fd75d;
  width: 249rpx;
  text-align: center;
  letter-spacing: 1rpx;
}

.bottom-item2-line1 {
  width: 100%;
  font-size: 30rpx;
