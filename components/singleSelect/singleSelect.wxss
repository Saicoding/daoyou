/* components/singleSelect/singleSelect.wxss */

.container {
  width: 94%;
  margin: 0 auto;
  border-radius: 10rpx;
}

.question {
  font-size: 32rpx;
  line-height: 42rpx;
  margin-top: 10rpx;
}

.question-type {
  background: #cbfee2;
  color: #04c358;
  font-size: 22rpx;
  text-align: center;
  width: 90rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 8rpx;
  padding:5rpx 10rpx 5rpx 10rpx;
  margin-right:20rpx;
}

.radio-group {
  width: 100%;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.imgAndText {
  clear: both;
  width: 100%;
  font-size: 30rpx;
  padding-left: 30rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  vertical-align: top;
  line-height: 50rpx;
}

.icon {
  display: float;
  float: left;
  width: 50rpx;
  height: 50rpx;
}

/* 答案选项的文字 */

.answer-text {
  display: inline-flex;
  margin-left: 40rpx;
  width: 543rpx;
  margin-top: 0rpx;
  vertical-align: top;
}
