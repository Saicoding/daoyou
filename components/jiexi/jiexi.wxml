<view hidden="{{!isAnswer}}" class="container">
  <view class="jiexi_border">
    <view class="line"></view>
    <text class="txt">试题详解</text>
    <view class="line"></view>
  </view>

  <!-- 解析描述 -->
  <view class='jiexi'>
    <view class="jiexi-top">
      <view class="jiexi-top-left">答案： {{answer}}</view>
      <view class="jiexi-top-right" bindtap="_toggleErrorRecovery">题目纠错</view>
    </view>
    <view class="jiexi-text2">
      <span style="color:#21c867;">宝典秘籍：</span>{{jiexi}}</view>
    <!-- 难度-->
    <view class="difficulty">
      <view class="difficulty-text">难度</view>
      <image class="difficulty-icon" wx:for="{{[1,2,3,4,5]}}" wx:for-item="star" wx:key="s" src= "/images/star.png"></image>
    </view>

    <!-- 横线 -->
    <view class ="downline"></view>

    <!-- 最下面的字 -->
    <view class ="downtext">宪法基本知识>我国的国家制度</view>
  </view>
</view>