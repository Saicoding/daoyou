/* components/errorRecovery/errorRecovery.wxss */

.container {
  position: fixed;
  width: 660rpx;
  top: 50rpx;
  left: 45rpx;
  z-index: 1000;
  border-radius: 10rpx;
}

.close{
  margin:0 auto;
  width:60rpx;
  height:60rpx;
  border-radius: 60rpx;
  border:1rpx solid rgba(245, 245, 245,0.5);
  background:rgba(10, 10, 10,0.3);
  margin-bottom: 30rpx;
}

.close-icon{
  width:24rpx;
  height:24rpx;
  margin-top:19rpx;
  margin-left:19rpx;
}

.pic{
  width:660rpx;
  height:902rpx;
}

.mycanvas{
  position: absolute;
  left:-700rpx;
  top:0rpx;
  width:660rpx;
  height:902rpx;
  border:1rpx solid red;
}

.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  filter: Alpha(Opacity=60);
  background: rgba(12, 12, 12, 0.3);
  z-index: 900;
}
