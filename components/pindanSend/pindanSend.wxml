<!--components/Dialog/dialog.wxml-->

<view wx:if="{{isShow}}" class="up" catchtap='stopBubbling'>
  <!-- 最上面的时间 -->
  <view class="up-time">88:88:88.88</view>
  <!-- 头像 -->
  <view class="up-avatar">
    <view>
      <image class="up-avatar-pic" src="/images/hongbao.png"></image>
      <view class="up-avatar-text">拼主</view>
    </view>
    <view class="up-avatar-pic" style="border:3rpx dashed #bdbdbd;margin-left:40rpx;">
      <image src="/images/wenhao.png" style="width:50rpx; height:50rpx;margin-left:20rpx;margin-top:20rpx;"></image>
    </view>
  </view>
  <!-- 文字信息 -->
  <view class="up-text">还差
    <span style="color:#e02e24;">1</span>人,赶快邀请好友来拼单吧</view>

  <!-- 邀请按钮 -->
  <view class="btn" bindtap = "yaoqingpindan" hover-class='select2' hover-stay-time='500'>邀请好友拼单</view>
  <!-- 生成邀请海报 -->
  <view class="btn1" bindtap = "getHaibao" hover-class='select3' hover-stay-time='500'>生成邀请海报</view>
 
</view>

<view wx:if="{{isShow && downShow}}" class="down" catchtap='stopBubbling'>
  <view class ="down-close" bindtap = "close">
    <image class="down-close-icon" src="/images/close1.png"></image>
  </view>

  <view class ="down-mid">
    把课程推荐给好友? 点击<span style = "color:#ff1111;font-weight:bolder">按钮</span>即可分享
  </view>
  <image class ="triggle" src="/images/dashed.png"></image>

  <view class ="bottom-btn" bindtap = "_share" hover-class='select1' hover-stay-time='500'>
    <image src="/images/wx.png" class ="bottom-btn-icon"></image>
    <view >分享给您的好友</view>
  </view>

</view>

<view wx:if="{{isShow}}" class="modal" bindtap="tapBlank"></view>