.mycontainer {
  background: #f4f7f9;
  width: 100%;
  margin: 0 auto;
}

.question {
  width:690rpx;
  font-size: 32rpx;
  line-height: 42rpx;
  margin-top: 10rpx;
  padding-left:30rpx;
  padding-right:30rpx;
}

.question-type {
  background: #cbfee2;
  color: #04c358;
  font-size: 22rpx;
  text-align: center;
  width: 90rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 8rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
  margin-right: 20rpx;
}

.checkbox-group {
  width: 100%;
  font-size: 30rpx;
  margin-top: 50rpx;
}

.answer-block {
  clear: both;
  width: 100%;
  font-size: 30rpx;
  padding-left: 30rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  vertical-align: top;
  line-height: 50rpx;
}

.answer-img {
  display: float;
  float: left;
  width: 50rpx;
  height: 50rpx;
}

/* 答案选项的文字 */

.answer-text {
  display: inline-flex;
  margin-left: 40rpx;
  width: 543rpx;
  margin-top: -5rpx;
  vertical-align: top;
}

.select1{
  background: rgba(75, 75, 75,0.1);
}
